{
  "manifest_version": 3,
  "name": "Watchdog",
  "version": "2.0",
  "description": "Monitor multiple tabs for custom text and get alerted when found",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "offscreen",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["bark.mp3", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
